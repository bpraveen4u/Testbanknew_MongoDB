@model TestBank.Web.ViewModels.AssessmentViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Assessment</legend>

    <div class="display-label">TestName</div>
    <div class="display-field">@Model.TestName</div>

    <div class="display-label">Questions</div>
    <div class="display-field">@(Model.Questions == null ? "None" : Model.Questions.Count.ToString())</div>

    <div class="display-label">CreationDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreatedDate)</div>

    <div class="display-label">CreatedUser</div>
    <div class="display-field">@Model.CreatedUser</div>

    <div class="display-label">ModifiedDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ModifiedDate)</div>

    <div class="display-label">ModifiedUser</div>
    <div class="display-field">@Model.ModifiedUser</div>

    <div class="display-label">Link</div>
    <div class="display-field">@Model.Link</div>

    <div class="display-label">ShortLink</div>
    <div class="display-field">@Model.ShortLink</div>

    <div class="display-label">Status</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Status).ToString()</div>

    <div class="display-label">Enable</div>
    <div class="display-field">@Model.Enable</div>

    <div class="display-label">Duration</div>
    <div class="display-field">@Model.Duration</div>

    <div class="display-label">MaxOptions</div>
    <div class="display-field">@Model.MaxOptions</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


