@model TestBank.Web.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>QuestionViewModel</legend>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">InstructorRemarks</div>
    <div class="display-field">@Model.InstructorRemarks</div>

    <div class="display-label">Category</div>
    <div class="display-field">@Model.Category</div>

    <div class="display-label">Options</div>
    <div class="display-field">@(Model.Options == null ? "None" : Model.Options.Count.ToString())</div>

    <div class="display-label">Weightage</div>
    <div class="display-field">@Model.Weightage</div>

    <div class="display-label">CorrectScore</div>
    <div class="display-field">@Model.CorrectScore</div>

    <div class="display-label">WrongScore</div>
    <div class="display-field">@Model.WrongScore</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


